<Page x:Class="WpfSQL.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfSQL.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Canvas Background="Yellow">
        <TextBox x:Name="LoginBox" Canvas.Left="329" Canvas.Top="150" Width="117" Height="21"/>
        <Label Content="Пароль" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5,0" Foreground="Black"  Width="64" Panel.ZIndex="1" Height="24" Canvas.Left="265" Canvas.Top="188"/>
        <Label Content="Логин" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5,0" Foreground="Black"  Width="64" Panel.ZIndex="1" Height="25" Canvas.Left="265" Canvas.Top="150"/>
        <TextBox x:Name="PassBox" Canvas.Left="329" Canvas.Top="188" Width="117" Height="20"/>
        <Button Content="Войти" Background="White" Canvas.Left="343" Canvas.Top="223" Width="79" Height="22" Click="Login"/>
        <Button Content="Регистрация" Background="White" Canvas.Left="343" Canvas.Top="250" Width="79" Click="Button_Click"/>
    </Canvas>
</Page>
